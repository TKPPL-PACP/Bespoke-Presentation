section
  div(match-detail layout="column" class="md-inline-form")
    md-content(layout-gt-sm="row" layout-padding).hide-overflow
      div
        md-input-container
          label Match ID
          input.form-control(ng-model="matchID" style="color:#000" on-enter="find()" onfocus)
        md-input-container
          md-button.md-raised.md-primary(ng-click="find()") Find Match Result 
    md-content(layout-padding ng-show="datas")
      h3 Match Date : {{ datas.start_time * 1000 | date: 'EEEE,dd-MMM-yyyy, HH:mm:ss'}}

section
  div(match-detail layout="column")
    md-content(layout-padding ng-show="datas")
       h3 Radiant <span ng-if="datas.radiant_win === true">Win</span><span ng-if="datas.radiant_win === false">Lose</span>
       table.stripe#matchResult.table-padding
        tr
          th No.
          th Name
          th Hero Id
          th Gold Per Min
          th Xp Per Min
          th Item 1
          th Item 2
          th Item 3
          th Item 4
          th Item 5
          th Item 6
        tr(ng-repeat="data in datas.players" ng-if="data.player_slot < 128")
          td {{ $index + 1 }}
          td(ng-if="data.account_id == 4294967295") Anonymous
          td(ng-if="data.account_id != 4294967295" ng-repeat="profile in profiles | filter: convertTo64Bit(data.account_id)") {{ profile.personaname }}
          td(ng-if="data.hero_id <= 31") {{ heroes[data.hero_id - 1].localized_name }}
          td(ng-if="data.hero_id > 31") {{ heroes[data.hero_id - 2].localized_name }}
          td {{ data.gold_per_min }}
          td {{ data.xp_per_min }}
          td {{ data.item_0 }}
          td {{ data.item_1 }}
          td {{ data.item_2 }}
          td {{ data.item_3 }}
          td {{ data.item_4 }}
          td {{ data.item_5 }}
          
section
  div(match-detail layout="column")
    md-content(layout-padding ng-show="datas")
       h3 Dire <span ng-if="datas.radiant_win === false">Win</span><span ng-if="datas.radiant_win === true">Lose</span>
       table.stripe#matchResult.table-padding
        tr
          th No.
          th Name
          th Hero Id
          th Gold Per Min
          th Xp Per Min
          th Item 1
          th Item 2
          th Item 3
          th Item 4
          th Item 5
          th Item 6
        tr(ng-repeat="data in datas.players" ng-if="data.player_slot >= 128" style="font-size:12px")
          td {{ $index - 4 }}
          td(ng-if="data.account_id == 4294967295") Anonymous
          td(ng-if="data.account_id != 4294967295" ng-repeat="profile in profiles | filter: convertTo64Bit(data.account_id)") {{ profile.personaname }}
          td(ng-if="data.hero_id <= 31") {{ heroes[data.hero_id - 1].localized_name }}
          td(ng-if="data.hero_id > 31") {{ heroes[data.hero_id - 2].localized_name }}
          td {{ data.gold_per_min }}
          td {{ data.xp_per_min }}
          td(ng-if="data.item_0 === 0") No Item
          td(ng-repeat="item in items" ng-if="item.id === data.item_0") {{ item.localized_name }}
          td(ng-if="data.item_1 === 0") No Item
          td(ng-repeat="item in items" ng-if="item.id === data.item_1") {{ item.localized_name }}
          td(ng-if="data.item_2 === 0") No Item
          td(ng-repeat="item in items" ng-if="item.id === data.item_2") {{ item.localized_name }}
          td(ng-if="data.item_3 === 0") No Item
          td(ng-repeat="item in items" ng-if="item.id === data.item_3") {{ item.localized_name }}
          td(ng-if="data.item_4 === 0") No Item
          td(ng-repeat="item in items" ng-if="item.id === data.item_4") {{ item.localized_name }}
          td(ng-if="data.item_5 === 0") No Item
          td(ng-repeat="item in items" ng-if="item.id === data.item_5") {{ item.localized_name }}

section
  div(match-history).md-inline-form
    md-content(layout-gt-sm="row" layout-padding).hide-overflow
      div
        md-input-container
          label Account Id
          input(ng-model="accountId" style="color:#000" on-enter="vm.findHistory()").hide-overflow
        md-input-container
          md-button.md-raised.md-primary(ng-click="vm.findHistory()") Find Match History
          div(ng-show="vm.hideSpinner")
            double-bounce-spinner
        md-input-container
          label Nickname
          input(ng-model="vm.user.personaname" disabled)
        md-input-container
          label Name
          input(ng-model="vm.user.realname" disabled)
    
    md-content(layout-padding ng-show="vm.datas")
      table.table-padding.stripe
        tr(style="padding: 3px 8px")
          th(style="padding: 8px") Match Id
          th(style="padding: 8px") Hero 
        tr(ng-repeat="match in vm.datas.matches")
          td {{ match.match_id }}
          td(style="padding: 0 8px" ng-repeat="player in match.players | filter:accountId" ng-if="player.hero_id <= 31") {{ heroes[player.hero_id - 1].localized_name }}
          td(style="padding: 0 8px" ng-repeat="player in match.players | filter:accountId" ng-if="player.hero_id > 31") {{ heroes[player.hero_id - 2].localized_name }}


