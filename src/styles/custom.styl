.bespoke-slide
  color #fff

.table-padding
  margin-top 5px
  th, td
    margin 0 5px
    padding 5px

table
  &.stripe
    stripe()

table
  &#matchResult
    &.stripe
      stripe()

body
  background #303030

.row:after, .row:before
  display table
  content " "

.row:after
  clear both

.hide-overflow
  overflow hidden

.ta-left
  text-align left

.ta-center
  text-align center

.ta-right
  text-align right

.ta-justify
  text-align justify

.inline
  display inline

.list-unstyle
  list-style none

.disabled
  display none

.match-history-list
  transition all linear 0.5s
  float left
  width 20% 
  .md-button
    margin: 0
    img
      width 100%

.match-history
  position relative
  .right, .left
    position absolute
    top 50%
    z-index 100
    cursor pointer
    &:hover
      color #3298df
  .right
    right 0
  .left
    left 0

.show-player
  transition all linear 1s

.player-avatar
  width 30%
  float left
  padding-right 10px
  img
    width 100%

.player-info
  background-color #f2f2f2

.players-card
  width 30%
  float left
  padding 4px
  margin 4px
  img 
    width 100%
    transition all linear 0.3s
  &:hover
    color #3298df
    font-weight bold
    img
      transform scale(1.13)
    .showing-player
      background none
  .hero-card
    position relative

.sm-players-card
  transition all linear 0.5s
  width 18%
  font-size 13px

.showing-player
  position absolute
  positioning(0,0,0,0)
  cursor pointer
  background rgba(32,32,32,0.5)
  transition all linear 0.3s

.item-build
  margin 5px
  width 30%
  float left
  img 
    width 91.19px
    height 68.66px

.no-item
  display table-cell
  width 91.19px
  height 68.66px
  border 2px dashed #666
  background-color #ccc
  color #fff
  font-weight bold
  text-align center
  vertical-align middle

.hr-line-dashed
  margin 5px 0 0
  border-top 2px dashed #999

.dark-col
  color #424242

.win
  color chartreuse

.lose
  color #d03232

.win, .lose
  font-weight bold

.radiant-win-bg, .dire-win-bg
  position absolute
  positioning(-40%, -25%, -57%, -57%)
  z-index -1

.radiant-win-bg
  background url("../images/radiant-win.jpg")

.dire-win-bg
  background url("../images/dire-win.jpg")

.developer
  .card-media
    padding 10px

.light-grey-spinner 
  .three-dots-row-spinner, .double-bounce1, .double-bounce2, .wave-spinner div, .pulse-spinner, .dot1, .dot2
    background-color $light-grey
    border-color $light-grey-bd

.light-blue-spinner
  .three-dots-row-spinner, .double-bounce1, .double-bounce2, .wave-spinner div, .pulse-spinner, .dot1, .dot2
    background-color $light-blue
    border-color $light-blue-bd

.danger-spinner
  .three-dots-row-spinner, .double-bounce1, .double-bounce2, .wave-spinner div, .pulse-spinner, .dot1, .dot2
    background-color $danger
    border-color $danger-bd

.warn-spinner
  .three-dots-row-spinner, .double-bounce1, .double-bounce2, .wave-spinner div, .pulse-spinner, .dot1, .dot2
    background-color $warn
    border-color $warn-bd

::-webkit-scrollbar
  width 8px
  height 8px
  background-color rgba(0,0,0,0)
  -webkit-border-radius: 100px

::-webkit-scrollbar:hover
  background-color rgba(0,0,0,0.09)

::-webkit-scrollbar-thumb
  background: rgba(0,0,0,0.5)
  -webkit-border-radius 100px

::-webkit-scrollbar-thumb:active
  background: rgba(0,0,0,0.61)
  -webkit-border-radius 100px

::-webkit-scrollbar-corner
  -webkit-box-shadow inset 0 0 6px rgba(0,0,0,1)

