.bespoke-slide
  color #fff

.table-padding
  margin-top 5px
  th, td
    margin 0 5px
    padding 5px

table
  &.stripe
    stripe()

table
  &#matchResult
    &.stripe
      stripe()

body
  background #303030

.row:after, .row:before
  display table
  content " "

.row:after
  clear both

.hide-overflow
  overflow hidden

.ta-left
  text-align left

.ta-center
  text-align center

.ta-right
  text-align right

.ta-justify
  text-align justify

.show-player
  transition all linear 1s

.player-avatar
  width 30%
  float left
  padding-right 10px
  img
    width 100%

.player-info
  background-color #f2f2f2

.players-card
  width 30%
  float left
  padding 4px
  margin 4px
  img 
    width 100%

.sm-players-card
  transition all linear 0.5s
  width 18%

.showing-player
  position absolute
  positioning(0,0,0,0)
  cursor pointer
  background rgba(32,32,32,0.5)

.item-build
  margin 5px
  width 30%
  float left
  img 
    width 100%

.hr-line-dashed
  margin 5px 0 0
  border-top 2px dashed #999

.light-grey-spinner 
  .three-dots-row-spinner, .double-bounce1, .double-bounce2, .wave-spinner div, .pulse-spinner, .dot1, .dot2
    background-color $light-grey
    border-color $light-grey-bd

.light-blue-spinner
  .three-dots-row-spinner, .double-bounce1, .double-bounce2, .wave-spinner div, .pulse-spinner, .dot1, .dot2
    background-color $light-blue
    border-color $light-blue-bd

.danger-spinner
  .three-dots-row-spinner, .double-bounce1, .double-bounce2, .wave-spinner div, .pulse-spinner, .dot1, .dot2
    background-color $danger
    border-color $danger-bd

.warn-spinner
  .three-dots-row-spinner, .double-bounce1, .double-bounce2, .wave-spinner div, .pulse-spinner, .dot1, .dot2
    background-color $warn
    border-color $warn-bd

::-webkit-scrollbar
  width 8px
  height 8px
  background-color rgba(0,0,0,0)
  -webkit-border-radius: 100px

::-webkit-scrollbar:hover
  background-color rgba(0,0,0,0.09)

::-webkit-scrollbar-thumb
  background: rgba(0,0,0,0.5)
  -webkit-border-radius 100px

::-webkit-scrollbar-thumb:active
  background: rgba(0,0,0,0.61)
  -webkit-border-radius 100px

::-webkit-scrollbar-corner
  -webkit-box-shadow inset 0 0 6px rgba(0,0,0,1)

