border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

stripe(even = #eee, odd = #ccc)
  tr
    background-color odd
    &.even
    &:nth-child(even)
      background-color even
    &:hover
      background-color #424242
      color #fff

positioning(top = 0, bottom = 0, right = 0, left = 0)
  top top
  bottom bottom
  right right
  left left

